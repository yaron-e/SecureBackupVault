modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App Server"

[[workflows.workflow]]
name = "Web App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web-app && npm install && node server/index.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd web-app && npm install && node server/index.js"]

[[ports]]
localPort = 5000
externalPort = 80
