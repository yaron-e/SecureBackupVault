{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist"]
}